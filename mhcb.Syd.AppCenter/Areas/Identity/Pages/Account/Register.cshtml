@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="row">
	<p>		
		<ul>
			<li>
				<strong>AppCenter</strong> has been developed technically again, including user authentication & authorization. So you have to register again;
			</li>
			<li>
				Now, everyone can login <strong>AppCenter</strong> for its own purpose;
			</li>
			<li>
				<Font color="Red">If you have GBASE or GUIDE user ID, you are advised to use it as ID here. 
				Otherwise you can use any 6 characters string;</Font>
			</li>
		</ul>
	</p>

	<div class="col-md-4">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<dive class="">
				<h2><span class="badge badge-info text-center">Create a new account</span></h2>
			</dive>
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Input.UserName" class="form-control-label"></label>
				<input asp-for="Input.UserName" class="form-control" placeholder="GBASE User ID" />
				<span asp-validation-for="Input.UserName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Email" class="form-control-label"></label>
				<input asp-for="Input.Email" class="form-control" placeholder="Mizuho Email" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.Password" class="form-control-label"></label>
				<input asp-for="Input.Password" class="form-control" placeholder="AppCenter Password" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword" class="form-control-label"></label>
				<input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmed Password" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary btn-width-100">Register</button>
		</form>
	</div>
