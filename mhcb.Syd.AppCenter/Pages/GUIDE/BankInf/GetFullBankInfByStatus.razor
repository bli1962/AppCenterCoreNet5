@page "/GetFullBankInfByStatus"
@inherits GetFullBankInfByStatusBase

@attribute [Authorize]

@*<body style="padding-top:20px">*@
<div class="container-fluid">

	@if (modelView == null && SelectStatus != "")
	{
		<div class="spinner"></div>
	}
	else
	{
		@*Section 1 - Title *@
		<div class="row ">

			<div class="col-sm-6">
				<div class="panel panel-primary" style="color: blue; border-color: #ffffff; ">
					<div class="panel-body"><h4>Bank Information Reports</h4></div>
				</div>
			</div>
		</div>

		@*Section 2 - Parameters*@
		<div class="row">
			<div class="col-sm-4">
				<table class="table table-sm table-bordered table-primary Col-Head-Left">
					<tbody thead class="thead-light">
						<tr>
							<td><label for="Id" class="col-form-label">Bank Inf Status</label></td>
							<td>
								<select class="custom-select-sm form-select-sm text-150" @bind="SelectStatus">
									<option value="F">Finalized</option>
									<option value="M">Modified</option>
									<option value="V">To be Verified</option>
									<option value="S">Submitted</option>
									<option value="All">All</option>
								</select>
							</td>
						</tr>
					</tbody>
				</table>

				<div class="well">
					<button class="btn btn-outline-primary m-1 float-left btn-width-80" @onclick="SearchClick">Search</button>
					<button class="btn btn-outline-info m-1 float-left btn-width-80" @onclick="CopyClick">Copy</button>
					<button class="btn btn-outline-primary m-1 float-left btn-width-80" @onclick="BackClick">Back</button>
				</div>
			</div>
		</div>

		@*Section 3 - list display*@
		<div name="SelectedReport" class="row col-sm-12 ">
			<table class="table table-sm table-striped table-hover table-primary" id="tblData">
				<thead class="table-primary Col-Head-Center">
					<tr>
						<th> SWIFT_ID </th>
						<th> BRANCH_NO </th>
						@*<th> SETTL_BRANCH_NO </th>*@
						<th> ACRONYM </th>
						<th> NAME_ADDR_1 </th>
						<th> NAME_ADDR_2 </th>
						<th> NAME_ADDR_3 </th>
						<th> NAME_ADDR_4 </th>
						<th> LOCATION_COUNTRY </th>
						@*<th> SWIFT_FLG </th>*@
						@*<th> CHIPS_UID </th>*@
						<th> COR_BANK_CD </th>
						<th> Status </th>
						<th> DELETION_STATUS </th>
						@*<th> GIP_STATUS </th>
						<th> GIP_DESCRIPTION </th>
						<th> TRAN_NO </th>*@
						<th> AUTHORIZE_BY </th>
						<th> CCY </th>
						<th> MM_SETTL_BANK_ID </th>
						@*<th> MM_SETTL_BANK_ACTNO </th>*@
					</tr>
				</thead>
				<tbody Class="table-active Row-Cell">
					@foreach (var item in modelView)
					{
						<tr>
							<td>@item.SWIFT_ID </td>
							<td>@item.BRANCH_NO </td>
							@*<td>@item.SETTL_BRANCH_NO </td>*@
							<td>@item.ACRONYM </td>
							<td>@item.NAME_ADDR_1 </td>
							<td>@item.NAME_ADDR_2 </td>
							<td>@item.NAME_ADDR_3 </td>
							<td>@item.NAME_ADDR_4 </td>
							<td>@item.LOCATION_COUNTRY </td>
							@*<td>@item.SWIFT_FLG </td>*@
							@*<td>@item.CHIPS_UID </td>*@
							<td>@item.COR_BANK_CD </td>
							<td>@item.STATUS </td>
							<td>@item.DELETION_STATUS </td>
							@*<td>@item.GIP_STATUS </td>
							<td>@item.GIP_DESCRIPTION </td>
							<td>@item.TRAN_NO </td>*@
							<td>@item.AUTHORIZE_BY </td>
							<td>@item.CCY </td>
							<td>@item.MM_SETTL_BANK_ID </td>
							@*<td>@item.MM_SETTL_BANK_ACTNO </td>*@
						</tr>
					}
				</tbody>
			</table>
		</div>
	}
</div>


@*the component take two parameters*@
<ConfirmYes @ref="ComfirmationComponent"
			ConfirmationChanged="ConfirmClick"
			ConfirmationTitle=@($"Bank Information")
			ConfirmationMessage=@($"No Bank Information found.")
			BtnClass=@($"btn btn-primary float-left")
			YesTitle=@($"Ok")>
</ConfirmYes>



