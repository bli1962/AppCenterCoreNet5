@page "/GetFXDeliveryCorporate"
@inherits GetFXDeliveryCorporateBase

@attribute [Authorize]

@*<body style="padding-top:20px">*@
<div class="container-fluid">

	@if (modelView == null)
	{
		<div class="spinner"></div>
	}
	else
	{
		<div class="row ">
			<div class="col-sm-6">
				<div class="panel panel-primary" style="color: blue; border-color: #ffffff; ">
					<div class="panel-body"><h4>Search FX Settlement Information by Delivery Date</h4></div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-4">
				<table class="table table-sm table-bordered table-primary Col-Head-Left">
					<tbody thead class="thead-light">
						<tr>
							<td><label for="Id" class="col-form-label">Delivery Date</label></td>
							<td><input type="date" class="form-control-sm" @bind="SelectedDeliveryDate" /></td>
						</tr>
					</tbody>
				</table>
				<div class="well">
					<button class="btn btn-outline-primary m-1 float-left btn-width-80" @onclick="SearchClick">Search</button>
					<button class="btn btn-outline-info m-1 float-left btn-width-80" @onclick="CopyClick">Copy</button>
					<button class="btn btn-outline-primary m-1 float-left btn-width-80" @onclick="BackClick">Back</button>
				</div>
			</div>
		</div>


		<div name="SelectedReport" class="row col-sm-12 ">
			<table class="table table-sm table-striped table-hover table-primary" id="tblData">
				<thead class="table-primary Col-Head-Center">
					<tr>
						<th>REF NO</th>
						<th>CUST ABBR</th>
						<th>CUST NAME</th>
						<th>Buy Amt</th>
						<th>Buy CCY</th>
						<th>REC SETTL CODE</th>
						<th>BUY ACCT TYPE</th>
						<th>REC ACT CD</th>
						<th>REC ACT NO</th>
						<th>REC CUST ABBR</th>
						<th>Sell Amt</th>
						<th>Sell CCY</th>
						<th>PAY SETTL CODE</th>
						<th>PAY ACCT TYPE</th>
						<th>PAY ACT CD</th>
						<th>PAY ACT NO</th>
						<th>PAY CUST_ABBR</th>
						<th>FX RATE</th>
						<th>DELIVARY DATE</th>
					</tr>
				</thead>
				<tbody Class="table-active Row-Cell">
					@foreach (var item in modelView)
					{
						<tr>
							<td>@item.REF_NO</td>
							<th>@item.CUST_ABBR</th>
							<th>@item.CUST_NAME</th>
							<th>@item.BuyAmt</th>
							<th>@item.BuyCCY</th>
							<th>@item.REC_SETTL_CODE</th>
							<th>@item.BUY_ACCT_TYPE</th>
							<th>@item.REC_ACT_CD</th>
							<th>@item.REC_ACT_NO</th>
							<th>@item.REC_CUST_ABBR</th>
							<th>@item.SellAmt</th>
							<th>@item.SellCCY</th>
							<th>@item.PAY_SETTL_CODE</th>
							<th>@item.PAY_ACCT_TYPE</th>
							<th>@item.PAY_ACT_CD</th>
							<th>@item.PAY_ACT_NO</th>
							<th>@item.PAY_CUST_ABBR</th>
							<th>@item.EXCHANGE_RATE</th>
							<th>@item.DELIVARY_DATE</th>

						</tr>
					}
				</tbody>
			</table>
		</div>

	}
</div>
@*the component take two parameters*@
<ConfirmYes @ref="ComfirmationComponent"
			ConfirmationChanged="ConfirmClick"
			ConfirmationTitle=@($"FX Delivery")
			ConfirmationMessage=@($"No FX Delivery found.")
			BtnClass=@($"btn btn-primary float-left")
			YesTitle=@($"Ok")>
</ConfirmYes>
@*</body>*@